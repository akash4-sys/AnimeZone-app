doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title #{title}
    meta(name='description' content='')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    //- link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")
    style 
      include ../../public/Login-css/login-form.css
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.css')
    link.logo(rel='icon' href='../resources/Logo.png' type='image/x-icon')

  if verification_error
      div.alert
          div(class="closebtn" onclick="this.parentElement.style.display='none';") &times;
          div Email is not verified, Please check your inbox or contact us at animezone@support.com

  form.container(action='/login' method='POST')
    // <img class="formlogo" src="../resources/Logo.png" alt="brandlogo">

    .formlogo
    if error
      div.alert
          div(class="closebtn" onclick="this.parentElement.style.display='none';") &times;
          div Email or password is incorrect
    if messages.info
      div.alert.success
          div(class="closebtn" onclick="this.parentElement.style.display='none';") &times;
          p= messages.info
    input.usertext.email.icon(type='text' name='email' required='' placeholder='Email' value = email)

    br
    br
    input.usertext.icon.pass(type='password' name='password' required='' placeholder='Password' value = password)

    br
    br

    p.rememberme
      input.checkbox(type='checkbox' name='rememberme' checked='checked')
      |  Keep Me Logged In
      label.checkmark
    br

    button.submit(type="submit") LOG IN

    br
    br

    section.links
      .right
        a.link(href='/login/forgotpassword') FORGOT PASSWORD?
      .left
        a.link(href='/login/signup') SIGNUP
    br
    br
    p.text Or Login With
    br
    br
    .brands
      span
        a.brand-hover.facebook(href="/auth/facebook")
          i.fab.fa-facebook.fa-3x
      span
        a.brand-hover.googleplus(href="/auth/google")
          i.fab.fa-google-plus.fa-3x
      span
        a.brand-hover.discord(href="/auth/discord")
          i.fab.fa-discord.fa-3x
